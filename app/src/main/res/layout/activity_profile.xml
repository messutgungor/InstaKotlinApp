<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteY="25dp"
        tools:context=".Profile.ProfileActivity"
        android:background="@color/beyaz">


    <TextView
            android:text="Mesut GÜNGÖR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvProfilAdiToolbar"
            android:textSize="18sp"
            android:textColor="@color/siyah"
            app:layout_constraintTop_toTopOf="@+id/imgProfilSettings"
            app:layout_constraintBottom_toBottomOf="@+id/imgProfilSettings"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_profile_options"
            android:id="@+id/imgProfilSettings"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_discover_people"
            android:id="@+id/imageView2"
            app:layout_constraintEnd_toStartOf="@+id/imgProfilSettings"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toTopOf="@+id/imgProfilSettings"
            app:layout_constraintBottom_toBottomOf="@+id/imgProfilSettings"/>

    <View android:layout_width="411dp" android:layout_height="2dp"
          android:background="@color/golgelik"
          android:id="@+id/golgelik"
          app:layout_constraintTop_toBottomOf="@+id/imgProfilSettings" android:layout_marginTop="8dp"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent">
    </View>

    <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/circleProfilimage"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:src="@drawable/ic_profile"
            app:civ_border_width="1dp"
            app:civ_border_color="@color/golgelik"
            app:layout_constraintTop_toBottomOf="@+id/golgelik" android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"/>


    <com.ittianyu.bottomnavigationviewex.BottomNavigationViewEx
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/bottomNavigationView"
            app:menu="@menu/bottom_navigation_menu"
            android:background="@color/beyaz"
            app:itemIconTint="@drawable/color_state_primary_dark"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
    >

    </com.ittianyu.bottomnavigationviewex.BottomNavigationViewEx>
    <TextView
            android:text="27"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            app:layout_constraintStart_toEndOf="@+id/circleProfilimage" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/textView3" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/circleProfilimage" android:textStyle="bold"
            android:textColor="@color/siyah" android:textSize="16sp"/>
    <TextView
            android:text="4556"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            app:layout_constraintStart_toEndOf="@+id/textView2" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/textView4"
            app:layout_constraintTop_toTopOf="@+id/textView2" android:textStyle="bold"
            android:textColor="@color/siyah" android:textSize="16sp"/>
    <TextView
            android:text="1238"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4" app:layout_constraintStart_toEndOf="@+id/textView3"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textView2" android:textStyle="bold"
            android:textColor="@color/siyah" android:textSize="16sp"/>
    <TextView
            android:text="gönderi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView5" app:layout_constraintStart_toStartOf="@+id/textView2"
            app:layout_constraintEnd_toEndOf="@+id/textView2" android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2"/>
    <TextView
            android:text="takipçi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView6" app:layout_constraintStart_toStartOf="@+id/textView3"
            app:layout_constraintEnd_toEndOf="@+id/textView3" android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/textView3"/>
    <TextView
            android:text="takip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView7" app:layout_constraintStart_toStartOf="@+id/textView4"
            app:layout_constraintEnd_toEndOf="@+id/textView4" android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/textView4"/>

</android.support.constraint.ConstraintLayout>